<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.EditProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/change_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Change your profile picture"
        android:fontFamily="@font/airbnb_cereal_medium"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp"
        android:layout_below="@id/change_profile_btn"
        >

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Close"
            android:textAllCaps="false"
            android:fontFamily="@font/airbnb_cereal_medium"
            android:background="@drawable/main_page_button_bg"
            android:textSize="14sp"
            android:layout_marginRight="6dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false"
            android:fontFamily="@font/airbnb_cereal_medium"
            android:background="@drawable/main_page_button_bg"
            />
    </LinearLayout>


</RelativeLayout>